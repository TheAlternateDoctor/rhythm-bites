switch
    case 2
    case 5
    case 7
    case 10
    case 13
    case 16
    case 18
    case 21
        play_sfx 0x100054A
    break
    case 23
        play_sfx 0x1000549
    default
        play_sfx 0x1000544
endswitch
rest 0x18
0xB4 1, 1
stop


