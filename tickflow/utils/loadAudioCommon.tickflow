
loadBanner:
0xB2 2
if 1
    remove_sfx 0xA
    remove_sfx 0xB
    rest 0xC
    call randomBannerA
    0xB3 2,0
else 
    remove_sfx 0xA
    remove_sfx 0xB
    rest 0xC
    call randomBannerB
    0xB3 2,1
endif
stop
randomBannerA:
random 2
switch
case 0
    set_sfx 0xA, u"shorts/A/GROUP_SHORTS_BANNER"
    break
case 1
    set_sfx 0xA, u"shorts/A/GROUP_SHORTS_BANNER_ALT"
    break
endswitch
return
randomBannerB:
random 2
switch
case 0
    set_sfx 0xB, u"shorts/A/GROUP_SHORTS_BANNER"
    break
case 1
    set_sfx 0xB, u"shorts/A/GROUP_SHORTS_BANNER_ALT"
    break
endswitch
return

