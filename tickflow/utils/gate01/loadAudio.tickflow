loadKlonoaTitle:
0xB2 2
if 1
    remove_sfx 0xA
    remove_sfx 0xB
    rest 0xC
    call randomKlonoaTitleA
    0xB3 3,1
    0xB3 2,0
else 
    remove_sfx 0xA
    remove_sfx 0xB
    rest 0xC
    call randomKlonoaTitleB
    0xB3 4,1
    0xB3 2,1
endif
stop
randomKlonoaTitleA:
random 2
switch
case 0
    set_sfx 0xA, u"shorts/E/GROUP_SHORTS_KLONOA_TITLE"
    break
case 1
    set_sfx 0xA, u"shorts/E/GROUP_SHORTS_KLONOA_TITLE_ALT"
    break
endswitch
return
randomKlonoaTitleB:
random 2
switch
case 0
    set_sfx 0xB, u"shorts/E/GROUP_SHORTS_KLONOA_TITLE"
    break
case 1
    set_sfx 0xB, u"shorts/E/GROUP_SHORTS_KLONOA_TITLE_ALT"
    break
endswitch
return

