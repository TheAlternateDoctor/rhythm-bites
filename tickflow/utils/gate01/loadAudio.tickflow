    0xB3 3,1
    0xB3 2,0
else 
    remove_sfx 0xA
    remove_sfx 0xB
    rest 0xC
    set_sfx 0xB, u"shorts/B/GROUP_SHORTS_WII"
    0xB3 4,1
    0xB3 2,1
endif
stop

